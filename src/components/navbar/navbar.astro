---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
// @ts-ignore
import { Icon } from "astro-icon";
const menuitems = [
  {
    title: "Innovation Bounties",
    path: "https://innovate.fwtx.city",
  },
  {
    title: "Resources",
    path: "#",
    children: [
      { title: "Whitepaper", path: "https://constitution.fwtx.city/" },
      {
        title: "Constitution",
        path: "https://constitution.fwtx.city/assets/constitution.pdf",
      },
      {
        title: "Developer",
        path: "https://github.com/FWTX-DAO/DeFi-Developer-Road-Map",
      },
      {
        title: "Investigations",
        path: "https://github.com/FWTX-DAO/On-Chain-Investigations-Tools-List",
      },
      {
        title: "OpSec",
        path: "https://github.com/FWTX-DAO/Crypto-OpSec-SelfGuard-RoadMap",
      },
      { title: "AI", path: "https://github.com/FWTX-DAO/ai-study-guide" },
      {
        title: "Zero Trust",
        path: "https://github.com/FWTX-DAO/awesome-zero-trust",
      },
    ],
  },
  /* {
    title: "Pricing",
    path: "/pricing",
  }, */
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Events",
    path: "https://meetu.ps/e/P1Npn/10RhC9/i",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="flex items-center gap-3">
          <img src="/logo.svg" alt="FWTX DAO Logo" class="w-12 h-12" />
          <span class="text-xl font-semibold text-gray-800">Fort Worth DAO</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
    <div class="hidden lg:flex items-center gap-3">
      <a
        href="https://twitter.com/FWTX_DAO"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-600 hover:text-gray-900 transition-colors"
        aria-label="X (Twitter)">
        <Icon name="mdi:twitter" class="w-5 h-5" />
      </a>
      <a
        href="https://linkedin.com/company/FWTX_DAO"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-600 hover:text-gray-900 transition-colors"
        aria-label="LinkedIn">
        <Icon name="mdi:linkedin" class="w-5 h-5" />
      </a>
      <a
        href="https://instagram.com/FWTX_DAO"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-600 hover:text-gray-900 transition-colors"
        aria-label="Instagram">
        <Icon name="mdi:instagram" class="w-5 h-5" />
      </a>
    </div>
  </header>
</Container>
